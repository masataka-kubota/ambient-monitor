{
  "name": "backend",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "db:generate": "drizzle-kit generate",
    "db:migration:local": "wrangler d1 migrations apply ambient-monitor --local",
    "db:migration:remote": "wrangler d1 migrations apply ambient-monitor --remote",
    "db:studio:local": "drizzle-kit studio --config drizzle.config.local-studio.ts",
    "db:studio:remote": "drizzle-kit studio --config drizzle.config.ts"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.4",
    "@hono/zod-validator": "^0.7.4",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.10.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.7",
    "@cloudflare/workers-types": "^4.20251111.0",
    "@hono/eslint-config": "^2.0.3",
    "better-sqlite3": "^12.4.1",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "~3.2.0",
    "wrangler": "^4.4.0"
  }
}
