{
  "name": "backend",
  "type": "module",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "scripts": {
    "dev": "wrangler dev",
    "dev:ip": "wrangler dev --ip 0.0.0.0",
    "build:types": "rm -rf dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migration:local": "wrangler d1 migrations apply ambient-monitor --local",
    "db:migration:remote": "wrangler d1 migrations apply ambient-monitor --remote",
    "db:studio:local": "drizzle-kit studio --config drizzle.config.local-studio.ts",
    "db:studio:remote": "drizzle-kit studio --config drizzle.config.ts"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.5",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.10.6",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.10",
    "@cloudflare/workers-types": "^4.20251121.0",
    "@hono/eslint-config": "^2.0.3",
    "@vitest/coverage-istanbul": "3.2.4",
    "better-sqlite3": "^12.4.5",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "vitest": "~3.2.4",
    "wrangler": "^4.50.0"
  }
}
